{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "target": "es2019",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "declaration": false,
        "plugins": [
            {
                "name": "eslint",
                "alwaysShowRuleFailuresAsWarnings": true,
                "jsEnable": false,
                "configFile": ".eslintrc"
            }
        ]
    }
}